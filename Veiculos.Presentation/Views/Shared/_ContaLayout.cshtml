<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Maninho Veículos</title>

    <!-- importando o CSS do bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.css" type="text/css" />

</head>
<body class="bg-secondary">

    <div class="row mt-5">

        <div class="col-md-4 offset-md-4">
            <div class="card">
                <div class="card-body">
                    <!-- local para exibir o conteudo das páginas -->
                    @RenderBody()
                </div>
            </div>
            <div class="mt-2 text-center text-white">
                <small>Maninho Veículos v1.0</small>
            </div>
        </div>


    </div>
    @** Exibir as mensagens dos controladores *@
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show"
         role="alert">
            <strong>Sucesso!</strong> @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"
                aria-label="Close"></button>
        </div>
    }
    else if (TempData["MensagemAlerta"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show"
         role="alert">
            <strong>Alerta!</strong> @TempData["MensagemAlerta"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"
                aria-label="Close"></button>
        </div>
    }
    else if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show"
         role="alert">
            <strong>Erro!</strong> @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"
                aria-label="Close"></button>
        </div>
    }



    <!-- importando os arquivos JS -->
    <script type="text/javascript" src="~/js/bootstrap.bundle.js"></script>

</body>
</html>
