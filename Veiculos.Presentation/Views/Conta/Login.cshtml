@** Definindo a classe de modelo de dados da página *@
@model Veiculos.Presentation.Models.ContaLoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_ContaLayout.cshtml";
}

<div class="text-center">
    <img src="" />
    <h3 class="text-primary"><strong>Controle de Veículos</strong></h3>
    <h4>Acesso ao Sistema</h4>
    <hr />
</div>

@** Formulário Razor *@
@using(Html.BeginForm())
{

    <div class="mb-2">
        <label>Email de acesso:</label>
        @Html.TextBoxFor(model => model.Email,
        new { @class = "form-control" })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>


    <div class="mb-2">
        <label>Senha de acesso:</label>
        @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Senha)
        </div>
        <div class="text-end">
            <a href="/Conta/Password">Esqueci minha senha?</a>
        </div>
    </div>


    <div class="mb-2">
        <div class="d-grid">
            <input type="submit" class="btn btn-success"
                   value="Acessar Sistema" />
        </div>
    </div>

    <div class="mb-2">
        <div class="d-grid">
            <a href="/Conta/Register" class="btn btn-primary">
                Não possui conta? <strong>Cadastre-se aqui!</strong>
            </a>
        </div>
    </div>
        <div class="mb-2">
            <div class="text-center text-danger">
                <strong>
                @TempData["Mensagem"]
                </strong>
            </div>
        </div>


}


